<div class="col-md-8 col-centered">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3>Job Listing
        <div class="pull-right">
          <%= link_to("Add a job", new_job_path, :class => "btn btn-default" ) %>
        </div>

        <div class="dropdown clearfix pull-right">
            <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              Rank
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
                <li>
                  <%= link_to("By Lowest", jobs_path(:order => "by_lower_bound")) %>
                </li>
                <li>
                    <%= link_to("By Highest", jobs_path(:order => "by_upper_bound")) %>

                </li>
                <li>
                  <%= link_to("By Time", jobs_path ) %>

                </li>
            </ul>
        </div>
      </div>
    </h3>

    <div class="panel-body">
      <table class="table table-boldered">
          <thead>
              <tr>
                  <td>Openings</td>
                  <td>Lowest</td>
                  <td>Highest</td>
                  <td>Time</td>
              </tr>

          </thead>
          <tbody>
              <% @jobs.each do |job| %>
              <tr>
                  <td>
                      <%= link_to(job.title, job_path(job)) %>
                  </td>
                  <td>
                      <%= job.wage_lower_bound %>
                  </td>
                  <td>
                      <%= job.wage_upper_bound %>
                  </td>
                  <td>
                      <%= job.created_at %>
                  </td>
              </tr>
              <% end %>
          </tbody>

      </table>
    </div>
  </div>
</div>
