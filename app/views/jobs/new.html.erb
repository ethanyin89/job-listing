<div class="col-md-8 col-centered">
  <div class="panel panel-primary">
    <div class="panel-heading">Add a job</div>
    <div class="panel-body">
      <%= simple_form_for @job do |f| %>

      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :wage_lower_bound, :label => "Lowest Bound" %>
      <%= f.input :wage_upper_bound, :label => "Highest Bound" %>
      <%= f.input :contact_email %>
      <%= f.input :is_hidden %>

        <%= f.submit "Submit", class: 'btn-danger'%>
      <% end %>
    </div>
  </div>
</div>
